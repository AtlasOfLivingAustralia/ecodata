<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <persistence directory="${ehcache.directory}"/>
    <cache alias="spatialGeoJsonPidObject">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialGeometryFromPid">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialGeoJsonPid">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <expiry>
            <ttl unit="days">365</ttl>
        </expiry>
<!--        <listeners>-->
<!--            <listener>-->
<!--                <class>au.org.ala.ecodata.SimpleCacheLogger</class>-->
<!--                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>-->
<!--                <event-ordering-mode>UNORDERED</event-ordering-mode>-->
<!--                <events-to-fire-on>CREATED</events-to-fire-on>-->
<!--                <events-to-fire-on>EXPIRED</events-to-fire-on>-->
<!--                <events-to-fire-on>EVICTED</events-to-fire-on>-->
<!--                <events-to-fire-on>UPDATED</events-to-fire-on>-->
<!--                <events-to-fire-on>REMOVED</events-to-fire-on>-->
<!--            </listener>-->
<!--        </listeners>-->
        <resources>
            <disk unit="GB" persistent="true">10</disk>
        </resources>
    </cache>
    <cache alias="spatialSearchObjectMap">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialGeoJsonPidGeometry">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>

        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialSearchObjectMatch">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialSearchObject">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <expiry>
            <tti unit="days">365</tti>
        </expiry>

        <resources>
            <disk unit="MB" persistent="true">500</disk>
        </resources>
    </cache>
    <cache alias="spatialPidFidIntersectionObject">
        <key-type>java.lang.String</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <tti unit="hours">1</tti>
        </expiry>
        <resources>
            <heap unit="entries">50</heap>
        </resources>
    </cache>
    <cache alias="spatialPidFidIntersection">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.String</value-type>
        <expiry>
            <tti unit="days">365</tti>
        </expiry>
        <resources>
            <disk unit="MB" persistent="true">500</disk>
        </resources>
    </cache>

    <cache alias="grailsTemplatesCache">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <heap>10</heap>
    </cache>
    <cache alias="grailsBlocksCache">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.io.Serializable</value-type>
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <heap>10</heap>
    </cache>

    <cache alias="userDetailsCache">

        <expiry>
            <ttl unit="days">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </cache>

    <cache-template name="defaultSetting">
        <key-type>java.io.Serializable</key-type>
        <value-type>java.util.HashMap</value-type>
    </cache-template>
</config>