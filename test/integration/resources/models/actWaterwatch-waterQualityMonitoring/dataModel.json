                                }
                            ]
                        }],
                        "class": ""
                    }]
                },
                {
                    "type": "col",
                    "items": [{
                        "type": "row",
                        "items": [{
                            "boxed": true,
                            "title": "Location",
                            "type": "section",
                            "items": [{
                                "type": "row",
                                "items": [{
                                    "includeNotes": false,
                                    "orientation": "vertical",
                                    "computed": null,
                                    "autoLocalitySearch": false,
                                    "readonly": true,
                                    "includeSource": false,
                                    "includeAccuracy": false,
                                    "hideSiteSelection": false,
                                    "source": "location",
                                    "type": "geoMap",
                                    "zoomToProjectArea": true,
                                    "includeLocality": false
                                }]
                            }],
                            "class": ""
                        }]
                    }]
                }
            ]
        },
        {
