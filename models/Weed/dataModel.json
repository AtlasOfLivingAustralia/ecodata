{
    "modelName": "Weed Treatment Details",
    "dataModel": [
        {
            "dataType": "species",
            "name": "targetSpecies"
        },
        {
            "dataType": "text",
            "name": "reproductiveStatus",
            "constraints": [
                "Flowering (FLWG)",
                "Seeding (SEDG)",
                "Vegetative & Mature (VGTV)",
                "Immature (IMTR)",
                "Not recorded (NRRS)"
            ]
        },
        {
            "dataType": "text",
            "name": "plantHealth",
            "constraints": [
                "Healthy",
                "Stressed",
                "Dead"
            ]
        },
        {
            "dataType": "text",
            "name": "controlStatus",
            "constraints": [
                "New Infestation",
                "Active Infestation",
                "Under control",
                "Under monitoring",
                "Closed",
                "Unknown"
            ]
        },
        {
            "dataType": "number",
            "name": "areaTreatedHa"
        },
        {
            "dataType": "text",
            "name": "treatmentEventType",
            "constraints": [
                "Initial treatment",
                "Follow-up treatment"
            ]
        },
        {
            "dataType": "text",
            "name": "treatmentMethod",
            "constraints": [
                "Environmental management - Fire",
                "Environmental management - moisture & nutrient control",
                "Environmental management - over-planting",
                "Chemical control - Foliar spraying",
                "Chemical control - Basal bark spraying",
                "Chemical control - Stem injection",
                "Chemical control - Cut stump",
                "Chemical control - Cut and swab",
                "Chemical control - Stem scraper",
                "Chemical control - Wick applicators",
                "Mechanical control - Slashing",
                "Mechanical control - Mowing",
                "Mechanical control - Dozing",
                "Mechanical control - Pushing",
                "Mechanical control - Felling",
                "Manual control - Hand pulling",
                "Manual control - Grubbing/chipping",
                "Biological control - Biological agents (indicate in notes)",
                "-- Other (please specify in notes) --"
            ]
        },
        {
            "dataType": "textarea",
            "name": "chemicalDetails"
        },
        {
            "dataType": "number",
            "name": "treatmentCostPerHa"
        },
        {
            "dataType": "textarea",
            "name": "notes"
        }
    ],
    "viewModel": [{
        "items": [{
            "items": [
                {
                    "source": "targetSpecies",
                    "computed": null,
                    "preLabel": "Target species: *",
                    "type": "autocomplete",
                    "validate": "required"
                },
                {
                    "source": "reproductiveStatus",
                    "computed": null,
                    "preLabel": "Reproductive status at the time of treatment:",
                    "type": "selectOne"
                },
                {
                    "source": "plantHealth",
                    "computed": null,
                    "preLabel": "Plant health at the time of treatment:",
                    "type": "selectOne"
                },
                {
                    "source": "controlStatus",
                    "computed": null,
                    "preLabel": "Control status: *",
                    "type": "selectOne",
                    "validate": "required"
                },
                {
                    "source": "areaTreatedHa",
                    "computed": null,
                    "preLabel": "Treatment area (Ha): *",
                    "type": "number",
                    "validate": "required"
                },
                {
                    "source": "treatmentEventType",
                    "computed": null,
                    "preLabel": "Type of treatment event: *",
                    "type": "selectOne",
                    "validate": "required"
                },
                {
                    "source": "treatmentMethod",
                    "computed": null,
                    "preLabel": "Treatment method: *",
                    "type": "selectOne",
                    "validate": "required"
                },
                {
                    "source": "chemicalDetails",
                    "computed": null,
                    "preLabel": "If chemical treatment, please provide details (chemical & application rate):",
                    "width": "60%",
                    "type": "textarea"
                },
                {
                    "source": "notes",
                    "computed": null,
                    "preLabel": "Comments / Notes:",
                    "width": "60%",
                    "type": "textarea"
                }
            ],
            "computed": null,
            "type": "col"
        }],
        "class": "output-section",
        "type": "row"
    }]
}