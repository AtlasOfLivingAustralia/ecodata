{
    "modelName": "Weed Treatment Details",
    "dataModel": [
        {
            "dataType": "species",
            "description": "The plant species being targeted for treatment",
            "name": "targetSpecies"
        },
        {
            "dataType": "text",
            "description": "The reproductive status of the target species being treated",
            "name": "reproductiveStatus",
            "constraints": [
                "Flowering (FLWG)",
                "Seeding (SEDG)",
                "Vegetative & Mature (VGTV)",
                "Immature (IMTR)",
                "Not recorded (NRRS)"
            ]
        },
        {
            "dataType": "text",
            "description": "The general health of the patch of the target species being treated",
            "name": "plantHealth",
            "constraints": [
                "Healthy",
                "Stressed",
                "Dead"
            ]
        },
        {
            "dataType": "text",
            "description": "The control status of the patch of the target species being treated",
            "name": "controlStatus",
            "constraints": [
                "New Infestation",
                "Active Infestation",
                "Under control",
                "Under monitoring",
                "Closed",
                "Unknown"
            ]
        },
        {
            "dataType": "textarea",
            "description": "Brief description of the general locality in which the treatment works were undertaken",
            "name": "locality"
        },
        {
            "dataType": "number",
            "description": "The area in hectares of the patch of the target species being treated",
            "name": "areaTreatedHa"
        },
        {
            "dataType": "number",
            "description": "The length in kilometres of the longest axis (eg. riparian, road, beach, etc.) of the treated area",
            "name": "linearAreaTreated"
        },
        {
            "dataType": "text",
            "description": "The stage of treatment for the patch of the target species being treated",
            "name": "treatmentEventType",
            "constraints": [
                "Initial treatment",
                "Follow-up treatment"
            ]
        },
        {
            "dataType": "text",
            "description": "The method used to treat the patch of the target species",
            "name": "treatmentMethod",
            "constraints": [
                "Environmental management - Fire",
                "Environmental management - moisture & nutrient control",
                "Environmental management - over-planting",
                "Chemical control - Foliar spraying",
                "Chemical control - Basal bark spraying",
                "Chemical control - Stem injection",
                "Chemical control - Cut stump",
                "Chemical control - Cut and swab",
                "Chemical control - Stem scraper",
                "Chemical control - Wick applicators",
                "Mechanical control - Slashing",
                "Mechanical control - Mowing",
                "Mechanical control - Dozing",
                "Mechanical control - Pushing",
                "Mechanical control - Felling",
                "Manual control - Hand pulling",
                "Manual control - Grubbing/chipping",
                "Biological control - Biological agents (specify in notes)",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "textarea",
            "description": "Details of chemical treatment including chemical agent and rate of application",
            "name": "chemicalDetails"
        },
        {
            "dataType": "number",
            "description": "The cost per hectare of the treatment",
            "name": "treatmentCostPerHa"
        },
        {
            "dataType": "text",
            "name": "notes"
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "items": [
                        {
                            "source": "targetSpecies",
                            "computed": null,
                            "preLabel": "Target species: *  <i>(start typing a species name)<\/i>",
                            "type": "autocomplete",
                            "validate": "required"
                        },
                        {
                            "source": "reproductiveStatus",
                            "computed": null,
                            "preLabel": "Reproductive status at the time of treatment:",
                            "type": "selectOne"
                        },
                        {
                            "source": "plantHealth",
                            "computed": null,
                            "preLabel": "Plant health at the time of treatment:",
                            "type": "selectOne"
                        },
                        {
                            "source": "controlStatus",
                            "computed": null,
                            "preLabel": "Control status: *",
                            "type": "selectOne",
                            "validate": "required"
                        },
                        {
                            "source": "locality",
                            "computed": null,
                            "preLabel": "Locality of the treatment area:",
                            "width": "60%",
                            "type": "textarea"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [
                        {
                            "source": "areaTreatedHa",
                            "computed": null,
                            "preLabel": "Treatment area (Ha): *",
                            "type": "number",
                            "validate": "required"
                        },
                        {
                            "source": "linearAreaTreated",
                            "computed": null,
                            "preLabel": "Length of riparian or roadside area treated (Km): *",
                            "type": "number",
                            "validate": "required"
                        },
                        {
                            "source": "treatmentEventType",
                            "computed": null,
                            "preLabel": "Type of treatment event: *",
                            "type": "selectOne",
                            "validate": "required"
                        },
                        {
                            "source": "treatmentMethod",
                            "computed": null,
                            "preLabel": "Treatment method: *",
                            "type": "selectOne",
                            "validate": "required"
                        },
                        {
                            "source": "chemicalDetails",
                            "computed": null,
                            "preLabel": "If chemical treatment, please provide details (chemical & application rate):",
                            "width": "60%",
                            "type": "textarea"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                }
            ],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "source": "notes",
                "computed": null,
                "preLabel": "Comments / Notes",
                "width": "90%",
                "type": "textarea"
            }],
            "class": "output-section",
            "type": "row"
        }
    ]
}