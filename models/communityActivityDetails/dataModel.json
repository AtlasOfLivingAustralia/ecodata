{
    "modelName": "Community Event Details",
    "dataModel": [
        {
            "dataType": "stringList",
            "description": "The purpose for which the event is being conducted",
            "name": "eventPurpose",
            "constraints": [
                "Awareness raising event (eg. demonstration, field day, or study tour)",
                "Training session, workshop or other skills/training event",
                "Knowledge evaluation event",
                "Works implementation",
                "Planning",
                "Other (describe in notes)"
            ],
            "validate": "required"
        },
        {
            "dataType": "text",
            "description": "The theme or topic covered during the event. Add in notes if more than one",
            "name": "eventTopics",
            "validate": "required"
        },
        {
            "dataType": "number",
            "description": "The duration of the event in hours. Part hour expressed as a decimal",
            "name": "eventDurationHrs",
            "validate": "required,min[0]"
        },
        {
            "dataType": "text",
            "description": "The main industry type that the event is addressing",
            "name": "industryType",
            "constraints": [
                "Sugarcane",
                "Grazing",
                "Grains",
                "Grapes",
                "Vegetables",
                "Fruit trees",
                "Berries",
                "Dairy",
                "Cotton",
                "Forestry",
                "Aquaculture",
                "Fishing",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "text",
            "name": "eventNotes"
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "items": [{
                        "source": "eventPurpose",
                        "computed": null,
                        "preLabel": "Purpose of event:",
                        "type": "selectMany"
                    }],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [
                        {
                            "source": "industryType",
                            "computed": null,
                            "preLabel": "Main industry type addressed:",
                            "type": "selectOne"
                        },
                        {
                            "source": "eventTopics",
                            "computed": null,
                            "preLabel": "Topics covered:",
                            "type": "text"
                        },
                        {
                            "source": "eventDurationHrs",
                            "computed": null,
                            "preLabel": "Event Duration (Hrs):",
                            "type": "number"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                }
            ],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "items": [{
                    "source": "eventNotes",
                    "computed": null,
                    "preLabel": "Comments / Notes:",
                    "type": "textarea"
                }],
                "computed": null,
                "type": "col"
            }],
            "class": "output-section",
            "type": "row"
        }
    ]
}