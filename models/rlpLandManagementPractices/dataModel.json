{
  "title": "Improving land management practices",
  "modelName": "RLP - Improving land management practices",
  "dataModel": [
    {
      "dataType": "list",
      "name": "landManagementDetails",
      "columns": [
        {
          "name":"initialOrFollowup",
          "dataType":"text",
          "validate":"required",
          "constraints":[
            "Initial control",
            "Follow-up control"
          ]
        },
        {
          "dataType": "feature",
          "name": "implementationSite",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaImplementedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(implementationSite)",
            "dependents": {
              "source": [
                "implementationSite"
              ]
            }
          }
        },
        {
          "dataType": "text",
          "description": "",
          "name": "practiceChangeType",
          "constraints": [
            "Stocking rates",
            "Watering arrangements",
            "Paddock design",
            "Rotation grazing",
            "Permaculture",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherPracticeChangeType",
          "description":"Please specify the type of land management practice change if Other (specify in notes) was selected in the Type of land management practice change.",
          "behaviour":[
            {
              "condition": "practiceChangeType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"industryType",
          "dataType":"text",
          "validate":"required",
          "constraints":[
            "Broad acre cropping",
            "Dairy",
            "Horticulture",
            "Grazing",
            "Fisheries",
            "Aquaculture"
          ]
        },
        {
          "name":"practiceChangeObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "dataType":"feature",
          "name":"offSiteBenefitSites"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "landManagementDetails",
          "columns": [
            {
              "type":"selectOne",
              "source":"initialOrFollowup",
              "title":"Initial or follow up",
              "width":"10%"
            },
            {
              "type":"feature",
              "source":"implementationSite",
              "title":"Site/s covered by implementation",
              "width":"5%"
            },
            {
              "title": "Area (Ha) covered by implementation",
              "source": "areaImplementedHa",
              "type": "number",
              "readonly":"readonly",
              "width":"5%"
            },
            {
              "title":"Type of action",
              "source":"practiceChangeType",
              "type":"select2",
              "width":"15%"
            },
            {
              "title":"Type of action (if Other)",
              "source":"otherPracticeChangeType",
              "type":"text",
              "width":"15%"
            },
            {
              "title":"Industry type",
              "source":"industryType",
              "type":"selectOne",
              "width":"15%"
            },
            {
              "title":"Purpose of improving LMP change",
              "source":"practiceChangeObjective",
              "type":"textarea",
              "width":"25%"
            },
            {
              "title":"Please identify any area/s that have shown evidence of off-site benefits",
              "source":"offSiteBenefitSites",
              "type":"feature",
              "width":"10%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}