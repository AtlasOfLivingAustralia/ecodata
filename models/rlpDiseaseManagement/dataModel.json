{
  "title": "Managing disease",
  "modelName": "RLP - Disease management",
  "dataModel": [
    {
      "dataType": "list",
      "name": "diseaseManagementDetails",
      "columns": [
        {
          "dataType": "feature",
          "name": "siteTreated",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaTreatedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(siteTreated)",
            "dependents": {
              "source": [
                "siteTreated"
              ]
            }
          }
        },

        {
          "dataType": "text",
          "description": "",
          "name": "targetDisease",
          "validate": "required"
        },
        {
          "dataType": "text",
          "description": "",
          "name": "managementMethod",
          "constraints": [
            "Biological control agents",
            "Fumigation",
            "Host destruction",
            "Plant disease management - quaratine",
            "Plant disease management - treatment",
            "Plant disease management - hygiene",
            "Positive competition",
            "Other"
          ],
          "dwcAttribute": "treatmentMethod",
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherManagementMethod",
          "description":"Please specify the management method used if Other (specify in notes) was selected in the Management Method column.",
          "behaviour":[
            {
              "condition": "managementMethod == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"treatmentObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "name":"initialOrFollowup",
          "dataType":"text",
          "validate":"required",
          "constraints":[
            "Initial treatment",
            "Follow-up treatment"
          ]
        },
        {
          "name":"areaDiseaseThreatReducedHa",
          "dataType":"number",
          "validate":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "diseaseManagementDetails",
          "columns": [
            {
              "title":"Initial / Followup control",
              "source":"initialOrFollowup",
              "type":"selectOne",
              "width":"10%"
            },
            {
              "type":"feature",
              "source":"siteTreated",
              "title":"Site/s treated for disease",
              "width":"5%"
            },
            {
              "type":"number",
              "source":"areaTreatedHa",
              "title":"Area (Ha) treated for disease",
              "readonly":"readonly",
              "width":"8%"
            },
            {
              "title": "Disease treated",
              "source": "targetDisease",
              "type": "text",
              "width":"15%"
            },
            {
              "title": "Type of management method / treatment",
              "source": "managementMethod",
              "type": "select2",
              "width":"15%"
            },
            {
              "title":"Type of management method / treatment (if other)",
              "source":"otherManagementMethod",
              "type":"text",
              "width":"20%"
            },
            {
              "title":"Treatment objective (300 character limit)",
              "source":"treatmentObjective",
              "type":"textarea",
              "width":"20%"
            },
            {
              "title":"Area (Ha) where disease threat has reduced",
              "source":"areaDiseaseThreatReducedHa",
              "type":"number",
              "width":"7%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}