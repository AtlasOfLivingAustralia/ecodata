{
  "title": "Revegetating habitat",
  "modelName": "RLP - Revegetating habitat",
  "dataModel": [

    {
      "dataType": "list",
      "name": "revegetationDetails",
      "columns": [
        {
          "name":"initialOrInfill",
          "dataType":"text",
          "validate":"required",
          "constraints":[
            "Initial",
            "Infill planting"
          ]

        },
        {
          "dataType": "feature",
          "name": "sitesRevegetated",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaRevegetatedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(sitesRevegetated)",
            "dependents": {
              "source": [
                "sitesRevegetated"
              ]
            }
          }
        },
        {
          "dataType": "text",
          "name": "revegetationMethod",
          "dwcAttribute": "establishmentMeans",
          "description": "The method used for planting",
          "constraints": [
            "Direct seeding",
            "Planting",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType": "species",
          "description": "",
          "name": "species",
          "dwcAttribute": "scientificName",
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherRevegetationMethod",
          "description":"Please specify the revegetation method if Other was selected in the Revegetation Method column.",
          "behaviour":[
            {
              "condition": "revegetationMethod == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"numberPlanted",
           "dataType":"number",
          "validate":"required,min[0]"
        },
        {
          "name":"revegetationObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "name":"offSiteBenefitSites",
          "dataType":"feature"
        }

      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "revegetationDetails",
          "columns": [
            {
              "title":"Initial or infill planting",
              "source":"initialOrInfill",
              "type":"selectOne",
              "width":"10%"
            },
            {
              "type":"feature",
              "source":"sitesRevegetated",
              "title":"Site/s of revegetations",
              "width":"5%"
            },
            {
              "type":"number",
              "source":"areaRevegetatedHa",
              "title":"Area (ha) of revegetations",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "title": "Planting method",
              "source": "revegetationMethod",
              "type": "selectOne",
              "width":"15%"
            },
            {
              "title": "Species planted",
              "source": "species",
              "type": "speciesSelect",
              "width":"25%"
            },
            {
              "title":"Number planted (include predicted count through kilograms of direct seeding)",
              "source":"numberPlanted",
              "type":"number",
              "width":"10%"
            },
            {
              "title":"Objective of revegetation (300 character limit)",
              "source":"revegetationObjective",
              "type":"textarea",
              "width":"20%"
            },
            {
              "title":"Please identify any area/s that have shown evidence of off-site benefits",
              "source":"offSiteBenefitSites",
              "type":"feature",
              "width":"5%"
            }


          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}