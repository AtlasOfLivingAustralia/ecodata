{
  "title": "Improving hydrological regimes",
  "modelName": "RLP - Improving hydrological regimes",
  "dataModel": [
    {
      "dataType": "list",
      "name": "hydrologicalRegimeDetails",
      "columns": [
        {
          "dataType": "text",
          "description": "",
          "name": "installedOrMaintained",
          "constraints": [
            "Installed",
            "Maintained"
          ],
          "validate": "required"
        },
        {
          "dataType":"number",
          "name":"numberOfStructuresInstalled",
          "validate":"required,min[0]"
        },
        {
          "name":"improvedSites",
          "dataType":"feature",
          "validate":"required"
        },
        {
          "name":"areaCoveringRegimeChange",
          "dataType":"number",
          "validate":"required,min[1]",
          "computed": {
            "expression": "$geom.areaHa(improvedSites)",
            "dependents": {
              "source": [
                "improvedSites"
              ]
            }
          }
        },

        {
          "dataType": "text",
          "description": "",
          "name": "treatmentType",
          "constraints": [
            "Removing barriers",
            "Structure instalment",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherTreatmentType",
          "behaviour":[
            {
              "condition": "treatmentType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"treatmentObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "name":"areaImprovedByRegimeChange",
          "dataType":"number",
          "validate":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "hydrologicalRegimeDetails",
          "columns": [
            {
              "type":"selectOne",
              "source":"installedOrMaintained",
              "title":"Area (ha) improved by hydrological regime change",
              "width":"10%"
            },
            {
              "type":"feature",
              "source":"improvedSites",
              "title":"Site/s where hydrological regimes are being improved",
              "width":"6%"
            },
            {
              "type":"number",
              "readonly":"readonly",
              "source":"areaCoveringRegimeChange",
              "title":"Area (Ha) convering the hydrological regime change",
              "width":"8%"
            },
            {
              "title":"Number of structures installed",
              "type":"number",
              "source":"numberOfStructuresInstalled",
              "width":"8%"
            },
            {
              "title": "Type of treatment implemented",
              "source": "treatmentType",
              "type": "select2",
              "width":"15%"
            },
            {
              "title":"Type of treatment implemented (if Other)",
              "source":"otherTreatmentType",
              "type":"text",
              "width":"20%"
            },
            {
              "title":"Hydrological treatment objective (300 character limit)",
              "source":"treatmentObjective",
              "type":"textarea",
              "width":"25%"
            },
            {
              "title":"Area (Ha) improved by hydrological regime change",
              "source":"areaImprovedByRegimeChange",
              "type":"number",
              "width":"8%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}