{
  "title": "Improving hydrological regimes",
  "modelName": "RLP - Improving hydrological regimes",
  "dataModel": [
    {
      "dataType": "list",
      "name": "hydrologicalRegimeDetails",
      "columns": [
        {
          "dataType": "text",
          "name": "siteId",
          "validate": "required",
          "constraints": {
            "config": {
              "source": {
                "context-path": "project.sites"
              },
              "mapping": [
                {
                  "target": "id",
                  "source-path": "siteId"
                },
                {
                  "target": "text",
                  "source-path": "name"
                }
              ]
            },
            "type": "pre-populated"
          }
        },
        {
          "dataType": "text",
          "description": "",
          "name": "improvementType",
          "constraints": [
            "Removing barriers",
            "Structure instalment",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherImprovementType",
          "description":"Please specify the action if Other (specify in notes) was selected in the Type of action column.",
          "behaviour":[
            {
              "condition": "improvementType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"improvementObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "name":"numberOfActions",
          "dataType":"number",
          "validate":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "hydrologicalRegimeDetails",
          "columns": [
            {
              "type":"select2",
              "source":"siteId",
              "title":"Area (ha) improved by hydrological regime change",
              "width":"20%"
            },
            {
              "title": "Type of action",
              "source": "improvementType",
              "type": "select2",
              "width":"20%"
            },
            {
              "title":"Type of action (if Other)",
              "source":"otherImprovementType",
              "type":"text",
              "width":"20%"
            },
            {
              "title":"Action aim (300 character limit)",
              "source":"improvementObjective",
              "type":"textarea",
              "width":"30%"
            },
            {
              "title":"Number of actions",
              "type":"number",
              "source":"numberOfActions",
              "width":"10%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}