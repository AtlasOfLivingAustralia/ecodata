{
  "title": "Management plans",
  "modelName": "RLP - Management plan development",
  "dataModel": [
    {
      "dataType": "stringList",
      "name": "siteIds",
      "validate": "required",
      "constraints": {
        "config": {
          "source": {
            "context-path": "project.sites"
          },
          "mapping": [
            {
              "target": "id",
              "source-path": "siteId"
            },
            {
              "target": "text",
              "source-path": "name"
            }
          ]
        },
        "type": "pre-populated"
      }
    },
    {
      "dataType": "list",
      "name": "managementPlans",
      "columns": [
        {
          "dataType": "text",
          "description": "",
          "name": "managementPlanType",
          "constraints": [
            "Fire management plan",
            "Catchment plan",
            "Implementation works design",
            "Marine protection plan",
            "Project arrangements and governance",
            "Site devlopement plan",
            "Site management plan",
            "Recovery plan",
            "Regional plan",
            "Resource management plan",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"newOrRevised",
          "description":"",
          "constraints":[
            "New plan",
            "Revised plan"
          ],
          "validate":"required"

        },
        {
          "dataType":"number",
          "name":"areaCoveredByPlanHa",
          "unit":"ha",
          "validate":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "items": [
            {
              "type":"select2Many",
              "source":"siteIds",
              "preLabel":"Project sites covered by management plans",
              "css":"span9"
            }
          ],
          "type": "row"
        },
        {
          "source": "managementPlans",
          "columns": [
            {
              "title": "Type of management plan",
              "source": "managementPlanType",
              "type": "select2",
              "width":"50%"
            },
            {
              "title":"Is this plan new or revised?",
              "source":"newOrRevised",
              "type":"selectOne",
              "width":"30%"
            },
            {
              "title":"Area covered by plan (ha)",
              "source":"areaCoveredByPlanHa",
              "type":"number",
              "width":"20%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}