{
  "title": "Fauna survey",
  "modelName": "RLP - Fauna survey",
  "dataModel": [
    {
      "dataType":"number",
      "name":"areaCoveredByFaunaSurveyHa",
      "units":"ha",
      "validate":"required,min[0]"
    },
    {
      "dataType": "stringList",
      "name": "siteIds",
      "validate": "required",
      "constraints": {
        "config": {
          "source": {
            "context-path": "project.sites"
          },
          "mapping": [
            {
              "target": "id",
              "source-path": "siteId"
            },
            {
              "target": "text",
              "source-path": "name"
            }
          ]
        },
        "type": "pre-populated",

      }
    },
    {
      "dataType":"list",
      "name":"faunaSurveyResults",
      "minSize":1,
      "columns":[
        {
          "dataType": "species",
          "name": "species",
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"surveyMethod",
          "validate":"required",

        },
        {
          "dataType":"text",
          "name":"otherSurveyMethod",
          "validate":"required"
        }
      ]
    }
  ],
  "viewModel": [

    {
      "items": [
        {
          "type":"row",
          "items":[
            {
              "type":"number",
              "source":"areaCoveredByFaunaSurveyHa",
              "preLabel":"Area covered by fauna survey (Ha)",
              "css":"span3"
            },
            {
              "type":"select2Many",
              "source":"siteIds",
              "preLabel":"Select project sites where assessments were undertaken",
              "css":"span9"
            }

          ]
        },
        {
          "columns": [
            {
              "source": "species",
              "title": "Target species of fauna survey",
              "type": "speciesSelect",
              "width":"40%"
            },
            {
              "source": "surveyMethod",
              "title": "Survey method",
              "type": "text",
              "width":"30%"
            },
            {
              "source": "otherSurveyMethod",
              "title": "Other survey method",
              "type": "text",
              "width":"30%"
            }
          ],
          "source":"faunaSurveyResults",
          "type": "table"
        },
        {
          "type":"row",
          "items":[
            {
              "type":"literal",
              "source":"<i>Note: to upload results and methodology of survey, refer to the documents tab.</i>"

            }

          ]
        }
      ],
      "type": "section"
    }
  ]
}