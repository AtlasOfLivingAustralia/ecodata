{
    "title": "Weed Management",
    "modelName": "ESP Weed Management",
    "dataModel": [
        {
            "dataType": "list",
            "name": "weedManagement",
            "columns": [
                {
                    "dataType": "species",
                    "description": "",
                    "name": "species",
                    "validate": "required"
                },
                {
                    "dataType": "stringList",
                    "description": "The primary method used to treat the patch of the target species",
                    "name": "treatmentMethod",
                    "constraints": [
                        "Chemical control - Foliar spraying",
                        "Chemical control - Basal bark spraying",
                        "Chemical control - Cut stump",
                        "Chemical control - Cut and swab",
                        "Mechanical control - Slashing",
                        "Mechanical control - Mowing",
                        "Mechanical control - Felling",
                        "Manual control - Hand pulling",
                        "Biological control - Biological agents (specify in notes)",
                        "Biological control â€“ Grazing",
                        "Environmental management - Fire",
                        "Other (specify in notes)"
                    ],
                    "validate": "required"
                },
                {
                    "dataType": "number",
                    "name": "weedAreaTreatedHa",
                    "validate": "required,min[0]"
                },
                {
                    "dataType": "text",
                    "name": "plantDensity",
                    "constraints": [
                        "Dense infestation",
                        "Isolated plant",
                        "Scattered plants"
                    ]
                },
                {
                    "dataType": "text",
                    "description": "The control status of the patch of the target species being treated",
                    "name": "controlStatus",
                    "constraints": [
                        "New Infestation",
                        "Active Infestation",
                        "Under control",
                        "Under monitoring",
                        "Closed",
                        "Unknown"
                    ]
                }
            ]
        },
        {
            "dataType": "number",
            "name": "cost",
            "validate": "integer,min[0]"
        },
        {
            "dataType":"text",
            "name":"managementActionNotCompleted",
            "description":"Was this management action completed this year.",
            "constraints":[
                "Yes",
                "No"
            ],
            "validate":"required"
        },
        {
            "dataType": "text",
            "name": "notes",
            "description": ""
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "title": "Please complete the following:",
                    "source": "weedManagement",
                    "columns": [
                        {
                            "title": "Species",
                            "source": "species",
                            "width": "25%",
                            "type": "speciesSelect"
                        },
                        {
                            "title": "Treatment Method",
                            "source": "treatmentMethod",
                            "width": "20%",
                            "type": "select2Many"
                        },
                        {
                            "title": "Approximate area treated (Ha)",
                            "source": "weedAreaTreatedHa",
                            "width": "10%",
                            "type": "number"
                        },
                        {
                            "title": "Density",
                            "source": "plantDensity",
                            "width": "15%",
                            "type": "selectOne"
                        },
                        {
                            "title": "Control Status",
                            "source": "controlStatus",
                            "width": "15%",
                            "type": "selectOne"
                        }
                    ],
                    "fixedWidth": true,
                    "userAddedRows": true,
                    "disableTableUpload":true,
                    "type": "table"
                }
            ],
            "type": "row"
        },
        {
            "type":"row",
            "items":[
                {
                    "preLabel": "Total cost of management actions",
                    "source": "cost",
                    "type": "currency"
                }
            ]
        },
        {
            "type":"row",
            "items":[
                {
                    "type":"col",
                    "items":[
                        {
                            "type":"selectOne",
                            "source":"managementActionNotCompleted",
                            "preLabel":"Have you chosen to not undertake activities under this Management action this year? (Yes / No)"
                        }
                    ]
                }

            ]
        },
        {
            "type": "row",
            "items": [
                {
                    "type": "textarea",
                    "source": "notes",
                    "preLabel": "If you have chosen to not undertake activities under this Management action or would like to provide further observations or comments regarding activities you have undertaken please fill out the textbox below."
                }
            ]
        }

    ]
}