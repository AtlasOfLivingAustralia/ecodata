{
  "title": "Controlling Pest Animals",
  "modelName": "Controlling Pest Animals",
  "dataModel": [
    {
      "dataType": "number",
      "description": "This is the total area where initial pest animal treatment has been undertaken/applied across ass sites for this project only.  Please see the reference guide for more information on initial pest animal control.",
      "name": "pestAnimalAreaTreatedHa",
      "validate": "required,min[0]"
    },
    {
      "dataType": "number",
      "description": "This is the total area where follow-up pest animal treatment has been undertaken/applied across ass sites for this project only.  Please see the reference guide for more information on follow-up pest animal treatment.",
      "name": "pestAnimalAreaTreatedFollowupHa",
      "validate": "required,min[0]"
    },
    {
      "dataType": "list",
      "name": "pestAnimalsControlled",
      "columns": [
        {
          "dataType": "text",
          "description": "The method used in this activity to manage pests",
          "name": "pestManagementMethod",
          "constraints": [
            "Crown of Thorns Starfish injection",
            "Bait & trap",
            "Bait only",
            "Biological control agents",
            "Exclusion fencing",
            "Fumigation",
            "Harbour destruction",
            "Positive competition",
            "Spotlight cull",
            "Trap & cull",
            "Trap & remove",
            "Other (specify in notes)"
          ],
          "dwcAttribute": "treatmentMethod",
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"managementMethodNotes",
          "description":"Please specify the management method used if Other (specify in notes) was selected in the Management Method column.",
          "behaviour":[
            {
              "condition": "pestManagementMethod == \"Other (specify in notes)\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "dataType": "species",
          "description": "Pest species targeted for treatment (start typing a  scientific or common name for a species)",
          "name": "pestSpecies",
          "dwcAttribute": "scientificName",
          "validate": "required"
        },
        {
          "dataType": "number",
          "behaviour": [
            {
              "condition": "pestManagementMethod == \"Bait & trap\" or pestManagementMethod == \"Bait only\"",
              "type": "enable"
            }
          ],
          "description": "",
          "name": "baitAreaOfInfluence",
          "validate": "min[0]"
        },
        {
          "dataType": "number",
          "behaviour": [
            {
              "condition": "pestManagementMethod == \"Bait & trap\" or pestManagementMethod == \"Bait only\"",
              "type": "enable"
            }
          ],
          "name": "confirmedKills",
          "validate": "min[0]"
        },
        {
          "dataType": "stringList",
          "name": "siteIds",
          "constraints": {
            "config": {
              "source": {
                "context-path": "project.sites"
              },
              "mapping": [
                {
                  "target": "id",
                  "source-path": "siteId"
                },
                {
                  "target": "text",
                  "source-path": "name"
                }
              ]
            },
            "type": "pre-populated"
          }
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "items": [
            {
              "source": "pestAnimalAreaTreatedHa",
              "preLabel": "Area treated for pest animals (Ha) - initial treatment area only",
              "type": "number"
            },
            {
              "source": "pestAnimalAreaTreatedFollowupHa",
              "preLabel": "Area treated for pest animals (Ha) - followup treatment area only",
              "type": "number"
            }
          ],
          "type": "row"
        },
        {
          "source": "pestAnimalsControlled",
          "columns": [
            {
              "title": "Species controlled",
              "source": "pestSpecies",
              "type": "speciesSelect",
              "width":"40%"
            },
            {
              "title": "Management method",
              "source": "pestManagementMethod",
              "type": "selectOne",
              "width":"20%"
            },
            {
              "title":"Management method (if other)",
              "source":"managementMethodNotes",
              "type":"textarea",
              "width":"20%"
            },
            {
              "title": "Site(s)",
              "source": "siteIds",
              "type": "select2Many",
              "width":"20%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}