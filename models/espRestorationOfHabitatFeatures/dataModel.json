{
    "title": "Restoration of Habitat Features",
    "modelName": "ESP Restoration of Habitat",
    "dataModel": [
        {
            "dataType": "list",
            "name": "habitatRestoration",
            "columns": [
                {
                    "dataType": "text",
                    "description": "",
                    "name": "habitatFeature",
                    "constraints": [
                        "Woody debris",
                        "Corrugated tin",
                        "Nesting boxes",
                        "Other"
                    ]
                },
                {
                    "dataType": "number",
                    "description": "",
                    "name": "areaTreatedHa",
                    "validate": "required"
                },
                {
                    "dataType": "number",
                    "name": "cost",
                    "validate": "integer,min[0]"
                }
            ]
        },
        {
            "dataType":"text",
            "description":"Please describe the habitat feature if other was selected",
            "name":"otherHabitatFeature"
        },
        {
            "dataType":"text",
            "name":"managementActionNotCompleted",
            "description":"Was this management action completed this year.",
            "constraints":[
                "Yes",
                "No"
            ],
            "validate":"required"
        },
        {
            "dataType": "text",
            "name": "notes",
            "description": ""
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "title": "Please complete the following:",
                    "source": "habitatRestoration",
                    "columns": [
                        {
                            "title": "Have you placed any of the following habitat features on your site?",
                            "source": "habitatFeature",
                            "type": "selectOne"
                        },
                        {
                            "title": "Area treated (Ha)",
                            "source": "areaTreatedHa",
                            "type": "number"
                        },
                        {
                            "title": "Cost of Management Action?",
                            "source": "cost",
                            "type": "currency"
                        }
                    ],
                    "userAddedRows": true,
                    "disableTableUpload":true,
                    "type": "table"
                }
            ],
            "type": "row"
        },
        {
            "type": "row",
            "items":[
                {

                    "preLabel": "Habitat Feature (if Other)",
                    "source": "otherHabitatFeature",
                    "type": "textarea"

                }
            ]
        },
        {
            "type":"row",
            "items":[
                {
                    "type":"col",
                    "items":[
                        {
                            "type":"selectOne",
                            "source":"managementActionNotCompleted",
                            "preLabel":"Have you chosen to not undertake activities under this Management action this year? (Yes / No)"
                        }
                    ]
                }

            ]
        },
        {
            "type": "row",
            "items": [
                {
                    "type": "textarea",
                    "source": "notes",
                    "preLabel": "If you have chosen to not undertake activities under this Management action or would like to provide further observations or comments regarding activities you have undertaken please fill out the textbox below."
                }
            ]
        }
    ]
}