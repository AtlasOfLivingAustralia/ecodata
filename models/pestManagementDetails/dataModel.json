{
    "modelName": "Pest and Disease Management Details",
    "dataModel": [
        {
            "dataType": "stringList",
            "description": "The method used in this activity to manage pests",
            "name": "pestManagementMethod",
            "constraints": [
                "Trap & remove",
                "Trap & cull",
                "Spotlight cull",
                "Bait & trap",
                "Bait only",
                "Fumigation",
                "Harbour destruction",
                "Positive competition",
                "Biological control agents",
                "Exclusion fencing (please specify fence details)",
                "Animal pest disease management - quarantine",
                "Animal pest disease management - treatment",
                "Plant disease management - quarantine",
                "Plant disease management - treatment",
                "Other (specify in notes)"
            ],
            "validate": "required"
        },
        {
            "dataType": "text",
            "description": "The purpose for which this activity is being undertaken",
            "name": "pestManagementPurpose",
            "constraints": [
                "Experimental",
                "Management",
                "Research",
                "Other (specify in notes)"
            ],
            "validate": "required"
        },
        {
            "dataType": "text",
            "description": "The incentive program applicable to this activity",
            "name": "treatmentIncentiveMethod",
            "constraints": [
                "Bounty-based cull",
                "Non-bounty-based cull",
                "No incentive program applicable",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "species",
            "description": "Pest species targeted for treatment",
            "name": "targetSpecies",
            "validate": "required"
        },
        {
            "dataType": "number",
            "description": "Number of target pest animals removed during this activity",
            "name": "pestAnimalsTreatedNo",
            "validate": "required"
        },
        {
            "description": "Area covered by treatment (Ha): *",
            "name": "areaTreatedHa",
            "type": "number",
            "validate": "required"
        },
        {
            "dataType": "number",
            "description": "Cost of this treatment on a per hectare basis",
            "name": "treatmentCostPerHa",
            "validate": "min[0]"
        },
        {
            "dataType": "number",
            "description": "Estimated density of pest animals per hectare prior to treatment action",
            "name": "pestDensityPerHa",
            "validate": "required"
        },
        {
            "dataType": "textarea",
            "name": "notes"
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "items": [
                        {
                            "source": "targetSpecies",
                            "computed": null,
                            "preLabel": "Target species: *  <i>(start typing a species name)<\/i>",
                            "type": "autocomplete"
                        },
                        {
                            "source": "treatmentIncentiveMethod",
                            "computed": null,
                            "preLabel": "Treatment incentive method:",
                            "type": "selectOne"
                        },
                        {
                            "source": "pestAnimalsTreatedNo",
                            "computed": null,
                            "preLabel": "No. of individuals killed/removed: *",
                            "type": "number"
                        },
                        {
                            "source": "areaTreatedHa",
                            "computed": null,
                            "preLabel": "Area covered by treatment (Ha): *",
                            "type": "number"
                        },
                        {
                            "source": "pestDensityPerHa",
                            "computed": null,
                            "preLabel": "Estimated pest density before treatment (No./Ha): *",
                            "type": "number"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [{
                        "source": "pestManagementMethod",
                        "computed": null,
                        "preLabel": "Pest management method: *",
                        "type": "selectMany"
                    }],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [
                        {
                            "source": "pestManagementPurpose",
                            "computed": null,
                            "preLabel": "Pest management purpose: *",
                            "type": "selectOne"
                        },
                        {
                            "source": "treatmentCostPerHa",
                            "computed": null,
                            "preLabel": "Cost of treatment / Ha.:",
                            "type": "number"
                        },
                        {
                            "source": "activityDuration",
                            "computed": null,
                            "preLabel": "Activity duration (Hrs):",
                            "type": "number"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                }
            ],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "source": "notes",
                "computed": null,
                "preLabel": "Comments / Notes",
                "width": "90%",
                "type": "textarea"
            }],
            "class": "output-section",
            "type": "row"
        }
    ]
}