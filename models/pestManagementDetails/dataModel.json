{
    "modelName": "Pest Management Details",
    "dataModel": [
        {
            "dataType": "stringList",
            "description": "The method used in this activity to manage pests",
            "name": "pestManagementMethod",
            "constraints": [
                "Trap & remove",
                "Trap & cull",
                "Spotlight cull",
                "Bait & trap",
                "Bait only",
                "Fumigation",
                "Exclusion fencing (please specify fence details)",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "text",
            "description": "The incentive program applicable to this activity",
            "name": "treatmentIncentiveMethod",
            "constraints": [
                "Bounty-based cull",
                "Non-bounty-based cull",
                "No incentive program applicable",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "species",
            "description": "Pest species targeted for treatment",
            "name": "targetSpecies"
        },
        {
            "dataType": "number",
            "description": "Number of target pest animals removed during this activity",
            "name": "pestAnimalsTreatedNo"
        },
        {
            "dataType": "number",
            "description": "Cost of this treatment on a per hectare basis",
            "name": "treatmentCostPerHa"
        },
        {
            "dataType": "textarea",
            "name": "notes"
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "items": [
                        {
                            "source": "targetSpecies",
                            "computed": null,
                            "preLabel": "Target species: *  <i>(start typing a species name)<\/i>",
                            "type": "autocomplete",
                            "validate": "required"
                        },
                        {
                            "source": "treatmentIncentiveMethod",
                            "computed": null,
                            "preLabel": "Treatment incentive method:",
                            "type": "selectOne"
                        },
                        {
                            "source": "pestAnimalsTreatedNo",
                            "computed": null,
                            "preLabel": "No. of individuals killed/removed: *",
                            "type": "number",
                            "validate": "required,digits"
                        },
                        {
                            "source": "areaTreatedHa",
                            "computed": null,
                            "preLabel": "No. Ha. covered by treatment: *",
                            "type": "number",
                            "validate": "required"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [{
                        "source": "pestManagementMethod",
                        "computed": null,
                        "preLabel": "Pest management method: *",
                        "type": "selectMany",
                        "validate": "required"
                    }],
                    "computed": null,
                    "type": "col"
                },
                {
                    "items": [
                        {
                            "source": "treatmentCostPerHa",
                            "computed": null,
                            "preLabel": "Cost of treatment / Ha.:",
                            "type": "number",
                            "validate": "min[0]"
                        },
                        {
                            "source": "activityDuration",
                            "computed": null,
                            "preLabel": "Activity duration (Hrs):",
                            "type": "number"
                        }
                    ],
                    "computed": null,
                    "type": "col"
                }
            ],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "source": "notes",
                "computed": null,
                "preLabel": "Comments / notes",
                "width": "90%",
                "type": "textarea"
            }],
            "class": "output-section",
            "type": "row"
        }
    ]
}