{
  "title": "Implementing fire management actions",
  "modelName": "RLP - Fire management",
  "dataModel": [
    {
      "dataType": "list",
      "name": "fireManagementDetails",
      "columns": [
        {
          "name":"initialOrFollowup",
          "dataType":"text",
          "validate":"required",
          "constraints":[
            "Initial",
            "Follow-up"
          ]
        },
        {
          "dataType": "feature",
          "name": "sitesTreated",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaTreatedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(sitesTreated)",
            "dependents": {
              "source": [
                "sitesTreated"
              ]
            }
          }
        },
        {
          "dataType": "text",
          "description": "",
          "name": "fireManagementType",
          "constraints": [
            "Ecological burn",
            "Hazard reduction burn",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherFireManagementType",
          "description":"Please specify the fire management action if Other (specify in notes) was selected in the Type of fire management action column.",
          "behaviour":[
            {
              "condition": "fireManagementType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"fireManagementObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        },
        {
          "name":"areaProtectedByFireHa",
          "dataType":"number",
          "validate":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "fireManagementDetails",
          "columns": [
            {
              "type":"selectOne",
              "source":"initialOrFollowup",
              "title":"Initial or follow-up",
              "width":"10%"
            },
            {
              "type":"feature",
              "source":"sitesTreated",
              "width":"5%",
              "title":"Site/s treated by fire management activity"
            },
            {
              "type":"number",
              "source":"areaTreatedHa",
              "width":"10%",
              "title":"Area (Ha) treated by fire management activity"
            },
            {
              "title": "Type of fire management activity",
              "source": "fireManagementType",
              "type": "select2",
              "width":"20%"
            },
            {
              "title":"Type of fire management activity (if Other)",
              "source":"otherFireManagementType",
              "type":"text",
              "width":"20%"
            },
            {
              "title":"Fire management activity objective (300 character limit)",
              "source":"fireManagementObjective",
              "type":"textarea",
              "width":"25%"
            },
            {
              "type":"number",
              "source":"areaProtectedByFireHa",
              "title":"Area (ha) protected by fire management action",
              "width":"10%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}