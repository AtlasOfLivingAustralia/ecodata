{
  "title": "Conservation actions",
  "modelName": "RLP - Conservation actions",
  "dataModel": [
    {
      "dataType": "number",
      "description": "",
      "name": "areaCoveredByActionsHa",
      "units":"ha",
      "validate": "required,min[0]"
    },
    {
      "dataType": "stringList",
      "name": "siteIds",
      "validate": "required",
      "constraints": {
        "config": {
          "source": {
            "context-path": "project.sites"
          },
          "mapping": [
            {
              "target": "id",
              "source-path": "siteId"
            },
            {
              "target": "text",
              "source-path": "name"
            }
          ]
        },
        "type": "pre-populated"
      }
    },
    {
      "dataType": "list",
      "name": "actions",
      "columns": [
        {
          "dataType": "text",
          "description": "",
          "name": "actionType",
          "constraints": [
            "Feral free enclosures",
            "Ex-situ breeding program",
            "Installation of nest boxes or other breeding refuge",
            "Refuge structures",
            "Re-release of Threatened Species",
            "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherActionType",
          "description":"",
          "behaviour":[
            {
              "condition": "actionType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "dataType":"number",
          "name":"numberOfActions",
          "validated":"required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "items": [
            {
              "source": "areaCoveredByActionsHa",
              "preLabel": "Area (Ha) covered by actions",
              "type": "number",
              "css":"span3"
            },
            {
              "type":"select2Many",
              "source":"siteIds",
              "preLabel":"Select the project sites where conservation actions were implemented",
              "css":"span6"
            }
          ],
          "type": "row"
        },
        {
          "source": "actions",
          "columns": [
            {
              "title": "Type of conservation action",
              "source": "actionType",
              "type": "select2",
              "width":"40%"
            },
            {
              "title":"Action type (if other)",
              "source":"otherActionType",
              "type":"text",
              "width":"40%"
            },
            {
              "title":"Number of implemented actions",
              "source":"numberOfActions",
              "type":"number"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}