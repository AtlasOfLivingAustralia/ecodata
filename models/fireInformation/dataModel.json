{
    "modelName": "Fire Information",
    "dataModel": [
        {
            "dataType": "text",
            "name": "fireIgnitionSource",
            "constraints": [
                "Lightning",
                "Fire lighters",
                "Aerial incendiary",
                "Accidental human",
                "Arson",
                "Other (specify in notes)",
                "Unknown"
            ]
        },
        {
            "dataType": "text",
            "name": "fireEventType",
            "constraints": [
                "Managed controlled burn",
                "Escaped controlled burn",
                "Wildfire",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "stringList",
            "name": "fireReason",
            "constraints": [
                "Fire fuel reduction",
                "Asset protection",
                "Weed management",
                "Pest animal management",
                "Ecology management",
                "Unplanned fire event",
                "Other (specify in notes)"
            ]
        },
        {
            "dataType": "number",
            "name": "areaOfFireHa"
        },
        {
            "dataType": "date",
            "name": "fireLastBurnDate"
        },
        {
            "dataType": "text",
            "name": "fireTimeSinceLastBurn",
            "constraints": [
                "1-3 years",
                "4-6 years",
                "7-10 years",
                "> 10 years"
            ]
        },
        {
            "dataType": "text",
            "name": "fireBurnTemp",
            "constraints": [
                "Cool",
                "Moderately hot",
                "Very hot",
                "Extreme"
            ]
        },
        {
            "dataType": "stringList",
            "name": "fireMachineryUsed",
            "constraints": [
                "Light tanker",
                "Heavy tanker",
                "Bulldozer / tractor / grader",
                "Hand tools",
                "Aircraft - fixed wing",
                "Aircraft - helicopter"
            ]
        },
        {
            "dataType": "number",
            "name": "totalMachineHours"
        },
        {
            "dataType": "number",
            "name": "controlLineKmMachine"
        },
        {
            "dataType": "number",
            "name": "controlLineKmHand"
        },
        {
            "dataType": "text",
            "name": "fireContainment",
            "constraints": [
                "Yes",
                "No",
                "Uncertain"
            ]
        }
    ],
    "viewModel": [{
        "items": [
            {
                "items": [
                    {
                        "source": "fireIgnitionSource",
                        "computed": null,
                        "preLabel": "Ignition source:",
                        "type": "selectOne"
                    },
                    {
                        "source": "fireEventType",
                        "computed": null,
                        "preLabel": "Type of fire event: *",
                        "type": "selectOne"
                    },
                    {
                        "source": "fireReason",
                        "computed": null,
                        "preLabel": "Reason(s) for burn: *",
                        "type": "selectMany",
                        "validate": "required"
                    },
                    {
                        "source": "areaOfFireHa",
                        "computed": null,
                        "preLabel": "Area of burn (Ha): *",
                        "type": "number",
                        "validate": "required"
                    },
                    {
                        "source": "fireLastBurnDate",
                        "computed": null,
                        "preLabel": "Previous burn date:",
                        "type": "date"
                    },
                    {
                        "source": "fireTimeSinceLastBurn",
                        "computed": null,
                        "preLabel": "Time since last burn:",
                        "type": "selectOne"
                    }
                ],
                "computed": null,
                "type": "col"
            },
            {
                "items": [
                    {
                        "source": "fireBurnTemp",
                        "computed": null,
                        "preLabel": "Temperature of burn:",
                        "type": "selectOne"
                    },
                    {
                        "source": "fireMachineryUsed",
                        "computed": null,
                        "preLabel": "Machinery used:",
                        "type": "selectMany"
                    },
                    {
                        "source": "totalMachineHours",
                        "computed": null,
                        "preLabel": "Total machinery hours:",
                        "type": "number"
                    },
                    {
                        "source": "controlLineKmMachine",
                        "computed": null,
                        "preLabel": "Length of control line - machinery (km):",
                        "type": "number"
                    },
                    {
                        "source": "controlLineKmHand",
                        "computed": null,
                        "preLabel": "Length of control line - hand tools (km):",
                        "type": "number"
                    },
                    {
                        "source": "fireContainment",
                        "computed": null,
                        "preLabel": "Did the fire stay with initial control lines?:",
                        "type": "selectOne"
                    }
                ],
                "computed": null,
                "type": "col"
            }
        ],
        "class": "output-section",
        "type": "row"
    }]
}