{
    "modelName": "Biological Survey - Flora",
    "dataModel": [
        {
            "dataType": "list",
            "name": "surveyResultsFlora",
            "columns": [
                {
                    "dataType": "text",
                    "description": "The identifier of the transect or plot in which sampling is being done.",
                    "name": "plotId"
                },
                {
                    "dataType": "text",
                    "description": "The identifier of the point at which the observational record was made",
                    "name": "sampleSiteId"
                },
                {
                    "dataType": "species",
                    "description": "Species recorded at the sample site",
                    "name": "species"
                },
                {
                    "dataType": "number",
                    "description": "The number of plants in the survey at the sample site which share the same set of record attributes.",
                    "name": "numberOfOrganisms"
                },
                {
                    "dataType": "text",
                    "description": "The structural layer occupied by the species",
                    "name": "stratum",
                    "constraints": [
                        "Canopy",
                        "Sub-canopy",
                        "Mid-stratum",
                        "Shrub layer",
                        "Ground stratum"
                    ]
                },
                {
                    "dataType": "number",
                    "description": "The average height of the species in the sample area",
                    "name": "aveHeight"
                },
                {
                    "dataType": "number",
                    "description": "The diameter in centimetres at breast height (1.2m above ground level) of sampled trees.",
                    "name": "dbh"
                },
                {
                    "dataType": "text",
                    "description": "The health or condition of the Plant(s) recorded",
                    "name": "health"
                },
                {
                    "dataType": "text",
                    "description": "Indicator as to whether biological material (either as a sample or whole organism) was taken.",
                    "name": "biologicalMaterialTaken",
                    "constraints": [
                        "Yes",
                        "No"
                    ]
                },
                {
                    "dataType": "text",
                    "description": "Any notes or comments applicable to a record (eg. health/condition indicators, nature of biological material taken, unlisted variants on select lists, etc.).",
                    "name": "speciesNotes"
                }
            ]
        },
        {
            "dataType": "number",
            "primaryResult": "true",
            "description": "Aggregate total of the individual organisms recorded in the survey event",
            "name": "totalNumberOfOrganisms",
            "computed": {
                "operation": "sum",
                "dependents": {
                    "source": "numberOfOrganisms",
                    "fromList": "surveyResultsFlora"
                }
            }
        },
        {
            "dataType": "number",
            "primaryResult": "true",
            "description": "The total number of different species recorded during the survey event",
            "name": "totalNumberOfSpecies",
            "computed": {
                "operation": "count",
                "dependents": {
                    "source": "species",
                    "fromList": "surveyResultsFlora"
                }
            }
        },
        {
            "dataType": "text",
            "description": "The identifier of a soil sample collected in association with this survey event",
            "name": "soilSampleCollected"
        },
        {
            "dataType": "text",
            "name": "notes"
        }
    ],
    "viewModel": [
        {
            "footer": {"rows": [{"columns": [
                {
                    "colspan": 3,
                    "source": "Total number of unique species recorded at this survey event:",
                    "computed": null,
                    "type": "literal"
                },
                {
                    "source": "totalNumberOfSpecies",
                    "computed": "{\"operation\":\"count\",\"dependents\":{\"source\":\"species\",\"fromList\":\"surveyResultsFlora\"}}",
                    "type": "number"
                },
                {
                    "colspan": 2,
                    "source": "Total No. of individual organisms recorded in this survey event:",
                    "computed": null,
                    "type": "literal"
                },
                {
                    "source": "totalNumberOfOrganisms",
                    "computed": "{\"operation\":\"sum\",\"dependents\":{\"source\":\"numberOfOrganisms\",\"fromList\":\"surveyResultsFlora\"}}",
                    "type": "number"
                },
                {
                    "colspan": 3,
                    "source": "",
                    "computed": null,
                    "type": "literal"
                }
            ]}]},
            "title": "Please list the details of plants observed or collected in each transect/plot and sampling site during this survey event:",
            "source": "surveyResultsFlora",
            "allowHeaderWrap": "true",
            "columns": [
                {
                    "title": "Transect / plot Id:",
                    "source": "plotId",
                    "computed": null,
                    "width": "8%",
                    "type": "text"
                },
                {
                    "title": "Sample Site Id:",
                    "source": "sampleSiteId",
                    "computed": null,
                    "width": "8%",
                    "type": "text"
                },
                {
                    "title": "Species:",
                    "source": "species",
                    "computed": null,
                    "width": "15%",
                    "type": "species"
                },
                {
                    "title": "No. of individuals:",
                    "source": "numberOfOrganisms",
                    "computed": null,
                    "width": "8%",
                    "type": "number"
                },
                {
                    "title": "Structural layer:",
                    "source": "stratum",
                    "computed": null,
                    "width": "10%",
                    "type": "selectOne"
                },
                {
                    "title": "Ave. Height (m):",
                    "source": "aveHeight",
                    "computed": null,
                    "width": "8%",
                    "type": "number"
                },
                {
                    "title": "Tree DBH (cm) if applicable:",
                    "source": "dbh",
                    "computed": null,
                    "width": "10%",
                    "type": "number"
                },
                {
                    "title": "Plant health:",
                    "source": "health",
                    "computed": null,
                    "width": "10%",
                    "type": "text"
                },
                {
                    "title": "Biological material taken:",
                    "source": "biologicalMaterialTaken",
                    "computed": null,
                    "width": "8%",
                    "type": "selectOne"
                },
                {
                    "title": "Notes:",
                    "source": "speciesNotes",
                    "computed": null,
                    "width": "15%",
                    "type": "textarea"
                }
            ],
            "class": "output-section",
            "userAddedRows": true,
            "editableRows": "true",
            "type": "table"
        },
        {
            "items": [{
                "source": "soilSampleCollected",
                "computed": null,
                "width": "40%",
                "preLabel": "If a soil sample was collected as part of this survey event, please indicate the sample Id:",
                "type": "text"
            }],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "source": "notes",
                "computed": null,
                "preLabel": "Comments / Notes",
                "width": "90%",
                "type": "textarea"
            }],
            "class": "output-section",
            "type": "row"
        }
    ]
}