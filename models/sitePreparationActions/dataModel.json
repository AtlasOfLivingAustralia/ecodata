{
    "modelName": "Site Preparation Actions",
    "dataModel": [{
        "dataType": "list",
        "name": "actionsList",
        "columns": [
            {
                "dataType": "text",
                "description": "Type of ground preparation works undertaken",
                "name": "groundPreparationWorks",
                "constraints": [
                    "Herbicide only",
                    "Herbicide and rip",
                    "Mound and swale",
                    "No preparation",
                    "Physical clearing",
                    "Ring levy",
                    "Rip only",
                    "Scalping",
                    "Scarifying",
                    "Fire - remove overgrowth",
                    "Fire - prepare ash bed for regeneration",
                    "Other (specify in notes)"
                ],
                "validate": "required"
            },
            {
                "dataType": "number",
                "description": "Area in hectares subject to the associated site preparation works",
                "name": "preparationArea",
                "validate": "required"
            },
            {
                "dataType": "text",
                "name": "notes"
            }
        ]
    }],
    "viewModel": [{
        "source": "actionsList",
        "columns": [
            {
                "title": "Ground preparation works: *",
                "source": "groundPreparationWorks",
                "width": "10%",
                "type": "selectOne"
            },
            {
                "title": "Area prepared (Ha): *",
                "source": "preparationArea",
                "width": "10%",
                "type": "number"
            },
            {
                "title": "Comments / Notes:",
                "source": "notes",
                "width": "80%",
                "type": "textarea"
            }
        ],
        "userAddedRows": "true",
        "type": "table"
    }]
}