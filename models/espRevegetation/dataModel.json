{
  "title": "Revegetation",
  "modelName": "ESP Revegetation",
  "dataModel": [
    {
      "dataType": "text",
      "name": "undertakeRevegetationActivities",
      "constraints": [
        "Yes",
        "No"
      ],
      "validate": "required"
    },
    {
      "dataType": "list",
      "name": "revegetation",
      "columns": [
        {
          "dataType": "text",
          "description": "The method used for planting",
          "name": "revegetationMethod",
          "constraints": [
            "Direct drill seeding",
            "Hand broadcast seeding",
            "Hand planting",
            "Machine planting",
            "Natural regeneration from threat exclusion / removal",
            "Infill plantings",
            "Combination of methods"
          ],
          "dwcAttribute": "establishmentMeans",
          "validate": "required"
        },
        {
          "dataType": "species",
          "noTotal": "true",
          "description": "The species planted / sown. (start typing a  scientific or common name for a species)",
          "name": "species",
          "dwcAttribute": "scientificName",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaTreatedHa",
          "validate": "required,min[0]"
        },
        {
          "dataType": "number",
          "name": "cost",
          "validate": "integer,min[0]"
        }
      ]
    },
    {
      "dataType": "list",
      "name": "survival",
      "columns": [
        {
          "dataType": "text",
          "description": "The method used for planting",
          "name": "revegetationMethod",
          "constraints": [
            "Direct drill seeding",
            "Hand broadcast seeding",
            "Hand planting",
            "Machine planting",
            "Natural regeneration from threat exclusion / removal",
            "Infill plantings",
            "Combination of methods"
          ],
          "dwcAttribute": "establishmentMeans",
          "validate": "required"
        },
        {
          "dataType": "species",
          "speciesList": "project",
          "noTotal": "true",
          "description": "The species planted / sown. (start typing a  scientific or common name for a species)",
          "name": "species",
          "dwcAttribute": "scientificName",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaTreatedHa",
          "validate": "required,min[0]"
        },
        {
          "dataType": "number",
          "name": "percentSurvival",
          "validate": "required,min[0],max[100]"
        }
      ]
    },
    {
      "dataType": "list",
      "name": "groundCover",
      "columns": [
        {
          "dataType": "text",
          "name": "season",
          "constraints": [
            "Spring",
            "Summer",
            "Autumn",
            "Winter"
          ],
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "groundCoverPercent",
          "validate": "required,min[0]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
