{
    "title": "Fencing",
    "modelName": "ESP Fencing",
    "dataModel": [
        {
            "dataType": "list",
            "name": "fencing",
            "columns": [
                {
                    "dataType": "text",
                    "description": "The type of fencing activity",
                    "name": "fenceActivityType",
                    "constraints": [
                        "Extension of existing fence line",
                        "Repairs to existing fence line",
                        "New fencing"
                    ]
                },
                {
                    "dataType": "number",
                    "description": "Length of fence erected in kilometres",
                    "name": "lengthOfFence",
                    "validate": "required"
                },
                {
                    "dataType": "text",
                    "description": "",
                    "name": "fencePurpose",
                    "constraints": [
                        "Exclusion of feral herbivores",
                        "Exclusion of livestock",
                        "Exclusion of native herbivores",
                        "Marking a boundary",
                        "Protection of paddock tree"
                    ],
                    "validate": "required"
                },
                {
                    "dataType": "number",
                    "name": "cost",
                    "validate": "integer,min[0]"
                }
            ]
        },
        {
            "dataType":"text",
            "name":"managementActionNotCompleted",
            "description":"Was this management action completed this year.",
            "constraints":[
                "Yes",
                "No"
            ],
            "validate":"required"
        },
        {
            "dataType": "text",
            "name": "notes",
            "description": ""
        }
    ],
    "viewModel": [
        {
            "items": [
                {
                    "title": "<i>Please note that this section also applies to repairs made to existing fencing.</i>",
                    "source": "fencing",
                    "columns": [
                        {
                            "title": "Type of Fencing Activity",
                            "source": "fenceActivityType",
                            "type": "selectOne"
                        },
                        {
                            "title": "Length of fence (Km):",
                            "source": "lengthOfFence",
                            "computed": null,
                            "type": "number"
                        },
                        {
                            "title": "Reason for Fencing",
                            "source": "fencePurpose",
                            "type": "selectOne"
                        },
                        {
                            "title": "Cost",
                            "source": "cost",
                            "type": "currency"
                        }
                    ],
                    "userAddedRows": true,
                    "disableTableUpload":true,
                    "type": "table"
                }
            ],
            "type": "row"
        },
        {
            "type":"row",
            "items":[
                {
                    "type":"col",
                    "items":[
                        {
                            "type":"selectOne",
                            "source":"managementActionNotCompleted",
                            "preLabel":"Have you chosen to not undertake activities under this Management action this year? (Yes / No)"
                        }
                    ]
                }

            ]
        },
        {
            "type": "row",
            "items": [
                {
                    "type": "textarea",
                    "source": "notes",
                    "preLabel": "If you have chosen to not undertake activities under this Management action or would like to provide further observations or comments regarding activities you have undertaken please fill out the textbox below."
                }
            ]
        }
    ]
}