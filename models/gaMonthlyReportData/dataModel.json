{
    "modelName": "Monthly Status Report Data",
    "dataModel": [
        {
            "dataType": "text",
            "description": "The month for which this report applies.",
            "name": "reportMonth",
            "constraints": [
                "July",
                "August",
                "September",
                "October",
                "November",
                "December",
                "January",
                "February",
                "March",
                "April",
                "May",
                "June"
            ],
            "validate": "required"
        },
        {
            "dataType": "text",
            "description": "The year for which this report applies.",
            "name": "reportYear",
            "constraints": [
                "2014",
                "2015"
            ],
            "validate": "required"
        },
        {
            "dataType": "text",
            "description": "Indicate the most appropriate status of the project at the end of the reporting month.",
            "name": "projectStatus",
            "constraints": [
                "Not started",
                "Commenced",
                "Progressing - behind schedule",
                "Progressing - on schedule",
                "Progressing - ahead of schedule",
                "Completed",
                "Abandoned"
            ],
            "validate": "required"
        },
        {
            "dataType": "date",
            "description": "If the project is running behind schedule you are required to explain why.",
            "name": "projectStatusReason"
        },
        {
            "dataType": "text",
            "description": "If the project is running behind schedule, please explain how you intend to bring it back on schedule, including what actions you plan to take.",
            "name": "remedialActions"
        },
        {
            "dataType": "number",
            "description": "Indicate the number of project participants who attended accredited training sessions/courses during the month.",
            "name": "trainingCommencingAccredited"
        },
        {
            "dataType": "number",
            "description": "Indicate the number of project participants who attended non-accredited training sessions/courses during the month.",
            "name": "trainingCommencingNonaccredited"
        },
        {
            "dataType": "number",
            "description": "Indicate the number of project participants who exited (did not complete) training sessions/courses during the month.",
            "name": "trainingNoExited"
        },
        {
            "dataType": "number",
            "description": "Indicate the number of project participants who attended <u>and<\/u> completed training sessions/courses during the month.",
            "name": "trainingNoCompleted"
        }
    ],
    "viewModel": [
        {
            "items": [{
                "source": "Please indicate the current status of the project at the time of this report. Note that it is mandatory to provide a reason and the remedial actions to be implemented if the project is tracking behind schedule.",
                "type": "literal"
            }],
            "type": "row"
        },
        {
            "items": [
                {
                    "items": [
                        {
                            "source": "reportMonth",
                            "preLabel": "Report month:",
                            "type": "selectOne"
                        },
                        {
                            "source": "reportYear",
                            "preLabel": "Year:",
                            "type": "selectOne"
                        },
                        {
                            "source": "projectStatus",
                            "preLabel": "How is the project tracking?:",
                            "type": "selectOne"
                        }
                    ],
                    "width": "30%",
                    "type": "col"
                },
                {
                    "items": [{
                        "source": "projectStatusReason",
                        "preLabel": "Reason project is behind schedule or that MERIT has not been updated:",
                        "type": "textarea"
                    }],
                    "width": "30%",
                    "type": "col"
                },
                {
                    "items": [{
                        "source": "remedialActions",
                        "preLabel": "Intended remedial actions (if appropriate):",
                        "type": "textarea"
                    }],
                    "width": "30%",
                    "type": "col"
                }
            ],
            "class": "output-section",
            "type": "row"
        },
        {
            "items": [{
                "source": "<h4>Participant Training<\/h4>",
                "type": "literal"
            }],
            "type": "row"
        },
        {
            "items": [{
                "source": "Please record training participation information.",
                "type": "literal"
            }],
            "type": "row"
        },
        {
            "items": [
                {
                    "source": "trainingCommencingAccredited",
                    "preLabel": "No. starting accredited training:",
                    "type": "number"
                },
                {
                    "source": "trainingCommencingNonaccredited",
                    "preLabel": "No. starting non-accredited training:",
                    "type": "number"
                },
                {
                    "source": "trainingNoExited",
                    "preLabel": "No. who exited training:",
                    "type": "number"
                },
                {
                    "source": "trainingNoCompleted",
                    "preLabel": "No. who completed training:",
                    "type": "number"
                }
            ],
            "class": "output-section",
            "type": "row"
        }
    ]
}