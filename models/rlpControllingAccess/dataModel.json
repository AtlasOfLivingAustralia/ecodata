{
  "title": "Controlling access",
  "modelName": "RLP - Controlling access",
  "dataModel": [
    {
      "dataType": "list",
      "name": "accessControlDetails",
      "columns": [
        {
          "dataType": "feature",
          "name": "areaInstalled",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaInstalledHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(areaInstalled)",
            "dependents": {
              "source": [
                "site"
              ]
            }
          }
        },
        {
          "dataType": "feature",
          "name": "protectedArea",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaProtectedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(protectedArea)",
            "dependents": {
              "source": [
                "protectedArea"
              ]
            }
          }
        },
        {
          "dataType": "text",
          "description": "",
          "name": "accessControlType",
          "constraints": [
              "Boardwalks",
              "Bollards & barriers",
              "Constructed parking bays",
              "Fencing, styles, gates & grids",
              "Formed traffic ways",
              "Signage",
              "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherAccessControlType",
          "description":"Please specify the type of access control if Other (specify in notes) was selected in the Type of Access Control Installed column.",
          "behaviour":[
            {
              "condition": "accessControlType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"controlObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "accessControlDetails",
          "columns": [
            {
              "type":"feature",
              "source":"areaInstalled",
              "title":"Installation",
              "width":"10%"
            },
            {
              "type":"number",
              "source":"areaInstalledHa",
              "title":"Area installed (Ha)",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "type":"feature",
              "source":"protectedArea",
              "title":"Spatial area protected by access control structure (Ha)",
              "width":"10%"
            },
            {
              "type":"number",
              "source":"areaProtectedHa",
              "title":"Area protected by access control structure (Ha)",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "title": "Type of access control installed",
              "source": "accessControlType",
              "type": "select2",
              "width":"20%"
            },
            {
              "title":"Type of access control installed (if Other)",
              "source":"otherAccessControlType",
              "type":"text",
              "width":"20%"
            },
            {
              "title":"Control objective (300 character limit)",
              "source":"controlObjective",
              "type":"textarea",
              "width":"40%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}