{
  "title": "Controlling access",
  "modelName": "RLP - Controlling access",
  "dataModel": [
    {
      "dataType": "list",
      "name": "accessControlDetails",
      "columns": [
        {
          "dataType": "feature",
          "name": "sitesInstalled",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "sitesInstalledHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(sitesInstalled)",
            "dependents": {
              "source": [
                "sitesInstalled"
              ]
            }
          }
        },
        {
          "dataType": "number",
          "name": "lengthInstalledKm",
          "validate": "required",
          "computed": {
            "expression": "$geom.lengthKm(sitesInstalled)",
            "dependents": {
              "source": [
                "sitesInstalled"
              ]
            }
          }
        },
        {
          "dataType": "feature",
          "name": "protectedSites",
          "validate": "required"
        },
        {
          "dataType": "number",
          "name": "areaProtectedHa",
          "validate": "required",
          "computed": {
            "expression": "$geom.areaHa(protectedSites)",
            "dependents": {
              "source": [
                "protectedSites"
              ]
            }
          }
        },
        {
          "dataType": "text",
          "description": "",
          "name": "accessControlType",
          "constraints": [
              "Boardwalks",
              "Bollards & barriers",
              "Constructed parking bays",
              "Fencing, styles, gates & grids",
              "Formed traffic ways",
              "Signage",
              "Other"
          ],
          "validate": "required"
        },
        {
          "dataType":"text",
          "name":"otherAccessControlType",
          "description":"Please specify the type of access control if Other (specify in notes) was selected in the Type of Access Control Installed column.",
          "behaviour":[
            {
              "condition": "accessControlType == \"Other\"",
              "type": "enable"
            }
          ],
          "validate":"required"
        },
        {
          "name":"controlObjective",
          "dataType":"text",
          "validate":"required,maxSize[300]"
        }
      ]
    }
  ],
  "viewModel": [
    {
      "items": [
        {
          "source": "accessControlDetails",
          "columns": [
            {
              "type":"feature",
              "source":"sitesInstalled",
              "title":"Site/s where access was controlled",
              "width":"10%"
            },
            {
              "type":"number",
              "source":"sitesInstalledHa",
              "title":"Area installed (Ha)",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "type":"number",
              "source":"lengthInstalledKm",
              "title":"Length installed (km)",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "type":"feature",
              "source":"protectedSites",
              "title":"Site/s protected by access control structure (Ha)",
              "width":"10%"
            },
            {
              "type":"number",
              "source":"areaProtectedHa",
              "title":"Area protected by access control structure (Ha)",
              "width":"10%",
              "readonly":"readonly"
            },
            {
              "title": "Type of access control installed",
              "source": "accessControlType",
              "type": "select2",
              "width":"15%"
            },
            {
              "title":"Type of access control installed (if Other)",
              "source":"otherAccessControlType",
              "type":"text",
              "width":"15%"
            },
            {
              "title":"Control objective (300 character limit)",
              "source":"controlObjective",
              "type":"textarea",
              "width":"20%"
            }
          ],
          "userAddedRows": true,
          "type": "table"
        }
      ],
      "type": "section"
    }
  ]
}